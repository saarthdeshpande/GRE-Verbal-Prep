<div align="center">
    <h1>THANK YOU!</h1>
    <br>
    <img src="/images/green-tick.svg" align="center" width="100" height="100">
    <br>
    <br>
    <p>You'll be automatically redirected in <span id="count">5</span> seconds.</p>
</div>

<script type="text/javascript">

    window.onload = () => {
        ( () => {
            var counter = 5;
            setInterval(() => {
                counter--;
                if (counter >= 0) {
                    span = document.getElementById("count");
                    span.innerHTML = counter;
                }
                if (counter === 0) {
                    window.location.href = '/about'
                }
            }, 1000);
        } )();
    }

</script>
